# NeuroVitalityCRM Environment Variables
# Copy this file to .env and fill in your values

# ─── App Identity ────────────────────────────────────────────────────────────
VITE_APP_TITLE="NeuroVitality CRM"
VITE_APP_LOGO="/logo.svg"

# ─── Domain ──────────────────────────────────────────────────────────────────
# The public URL of your deployed application
VITE_APP_URL="https://crm.neurovitality.com"

# ─── Database ────────────────────────────────────────────────────────────────
DATABASE_URL="your_database_connection_string"

# ─── Authentication ──────────────────────────────────────────────────────────
JWT_SECRET="your_jwt_secret_here"
OAUTH_SERVER_URL="https://oauth.manus.im"
OWNER_OPEN_ID="your_owner_open_id"

# ─── Google OAuth (for Google Calendar integration) ──────────────────────────
# Authorized redirect URI to add in Google Cloud Console:
#   https://crm.neurovitality.com/api/oauth/google/callback
GOOGLE_OAUTH_CLIENT_ID="your_google_client_id"
GOOGLE_OAUTH_CLIENT_SECRET="your_google_client_secret"
GOOGLE_OAUTH_REDIRECT_URI="https://crm.neurovitality.com/api/oauth/google/callback"

# ─── AI / LLM ────────────────────────────────────────────────────────────────
BUILT_IN_FORGE_API_URL="your_forge_api_url"
BUILT_IN_FORGE_API_KEY="your_forge_api_key"

# ─── Integrations (optional) ─────────────────────────────────────────────────
AMPLEMARKET_API_KEY="your_amplemarket_api_key"
HUNTER_API_KEY="your_hunter_api_key"
GOOGLE_MAPS_API_KEY="your_google_maps_api_key"
